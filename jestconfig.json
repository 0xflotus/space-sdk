{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverage": true,
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "lib/src/**/*.{js,ts}"
  ],
  "coverageDirectory": "meta",
  "coverageThreshold": {
    "global": {
      "functions": 90,
      "lines": 90
    }
  }
}