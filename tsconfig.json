{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests/*"]
}