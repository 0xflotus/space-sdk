{
  "name": "space-js",
  "version": "0.0.1",
  "description": "Space App database and auth wrappers",
  "main": "dist/index.js",
  "directories": {
    "src": "src"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json --runInBand src",
    "prebuild": "del dist/",
    "build": "tsc",
    "postbuild": "cpy '**/*' '!**/*.ts' ../dist/ --cwd=src/ --no-overwrite --parents",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "start": "webpack -c webpack.config.dev.js serve",
    "build:browser": "npx webpack",
    "build:browser-dev": "npx webpack -c webpack.config.dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FleekHQ/space-js.git"
  },
  "author": "FleekHQ",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FleekHQ/space-js/issues"
  },
  "homepage": "https://github.com/FleekHQ/space-js#readme",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/uuid": "^3.4.5",
    "clean-webpack-plugin": "^3.0.0",
    "cpy-cli": "^3.1.1",
    "del-cli": "^3.0.1",
    "dotenv-webpack": "^6.0.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.3",
    "prettier": "^1.17.1",
    "raw-loader": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@textile/hub": "^1.2.1",
    "@textile/hub-threads-client": "^1.1.1",
    "@textile/threads": "^1.2.0",
    "@textile/threads-client": "^1.2.0",
    "@textile/threads-core": "^0.3.1",
    "@textile/threads-id": "^0.2.0",
    "axios": "^0.21.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "multibase": "^3.1.0",
    "process": "^0.11.10",
    "protons": "^2.0.0",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.3",
    "varint": "^6.0.0"
  },
  "resolutions": {
    "**/@textile/threads-id": "^0.2.0"
  }
}
